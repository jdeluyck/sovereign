[DEFAULT]
ignoreip  = 127.0.0.1/8 {{ ansible_default_ipv4.address }} {{ ' '.join(friendly_networks) }}
bantime   = 86400
destemail = {{ admin_email }}

# JAILS
[sshd]
enabled   = true
maxretry  = 3

[pam-generic]
enabled   = true

[sshd-ddos]
enabled   = true

[apache]
enabled = true

[postfix]
enabled  = true
maxretry = 1

[dropbear]
enabled  = true
maxretry = 3
port     = {{ crypt_ssh_port }}

[dovecot]
enabled  = true
filter   = dovecot
maxretry = 20
findtime = 1200
bantime  = 1200
